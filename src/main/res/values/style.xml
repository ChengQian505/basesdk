<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--TipDialog-->
    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateUnchanged</item>
    </style>

    <style name="tipdialog_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="tipdialog_btns_container">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48.0dip</item>
    </style>

    <style name="tipdialogonebtn_confirm">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_tipdialog_btn</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">30.0dip</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:layout_marginRight">30.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>

    <style name="tipdialog_btn" parent="@style/tipdialogonebtn_confirm">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:layout_marginRight">0.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="tipdialog_container">
        <item name="android:background">@drawable/bg_tipdialog</item>
        <item name="android:layout_width">315.0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tipdialog_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff5f5f5f</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">20.0dip</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dip</item>
    </style>

    <style name="line_tip_dialog">
        <item name="android:background">#ffd2d2d2</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
    </style>
    <!--TipDialog-->
</resources>